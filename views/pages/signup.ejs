========================================-->
<div style="position: fixed; z-index: -99; width: 100%; height: 100%">
  <iframe frameborder="0" height="108%" width="100%" loop="true"  
    src="https://youtube.com/embed/e8DFN3m8XGQ?loop=1&playlist=e8DFN3m8XGQ&fs=1&autoplay=1&controls=0&showinfo=0&autohide=1&rel=1&start=4" allowfullscreen>
  </iframe>
</div>
<!========================================
                 TITLE
========================================-->
        <div class="top-content">
            <div class="inner-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2 text">
                          <a class="logo" href="index.html"></a>
                            <h1 class="titleheader">Social Layover<h1><h2> Networking Beyond the Cloud</h2>
                              <div class="top-big-link">
                                <a class="btn btn-link-1" id="launch-modal-login" href="#" data-modals-id="modal-login">LOGIN</a>
                                <a class="btn btn-link-1" id="launch-modal-register" href="#" data-modal-id="modal-register">REGISTER</a>
                              </div>
                        </div>                            
                    </div>
                </div>
            </div>
        </div>
<!========================================
              Register Modals
========================================-->
        <div class="modal fade" id="modal-register" tabindex="-1" role="dialog" aria-labelledby="modal-register-label" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                  <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h3 class="modal-title" id="modal-register-label">Create Account</h3>
              </div>
              <div class="modal-body">   
                <form action="/signup" method="POST" class="registration-form">
                  <div class="form-group">
                    <input type="text" name="user[name]" placeholder="Name" class="form-first-name form-control" id="form-name">
                  </div>
                  <div class="form-group">
                    <input type="text" name="user[email]" placeholder="Email" class="form-last-name form-control" id="form-last-email">
                  </div>
                  <div class="form-group">
                    <input type="text" name="user[userName]" placeholder="Username" class="form-username form-control" id="form-username">
                  </div>
                  <div class="form-group">
                    <input type="password" name="user[password]" placeholder="Password" class="form-password form-control" id="form-password">
                  </div>                          
                  <div class="form-group">
                    <textarea name="user[about]" placeholder="About yourself..." class="form-about-yourself form-control" id="form-about-yourself" ></textarea>
                  </div>
                  <button class="btn">Register</button>
                </form>
              </div>
            </div>
          </div>
        </div>
<!========================================
              Login Modals
========================================-->
        <div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modal-login-label" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                  <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h3 class="modal-title" id="modal-login-label">Member Login</h3>
                <p>Sign in to get connected:</p>
              </div>
              <div class="modal-body">
                <form action="/login" method="POST" class="registration-form">
                    <div class="form-group">
                      <input type="text" name="user[userName]" placeholder="Username" class="form-username form-control" id="form-username">
                    </div>
                    <div class="form-group">
                      <input type="password" name="user[password]" placeholder="Password" class="form-password form-control" id="form-password">
                    </div>                          

                    <button class="btn">Connect</button>
                </form>
              </div>
            </div>
          </div>
        </div>
  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>