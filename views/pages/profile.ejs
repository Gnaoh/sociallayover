<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
<body>
<!========================================
              NAVIGATION
========================================-->  
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand">Social Layover</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="lounge">Lounge</a></li>
          <li><a href="/">Logout</a></li>
        </ul>
      <div id="edit_btn">
        <ul class="nav navbar-nav">
          <li> <a id="launch-modal-edit" href="#" data-modals-id="modal-edit">Edit Profile</a></li>
        </ul>
      </div>
      </div>
    </div>
  </nav>
<!========================================
              Profile
========================================--> 
  <div class="container">
    <div class="profile card">
      <div class="profile-body">
          <div class="profile-bio">
            <div class="row">
              <div class="col-md-5 text-center">
                <img class="img-thumbnail md-margin-bottom-10" src="static/img/profile.png" alt="">
              </div>
              <div class="col-md-7">
                  <h2><strong><%=user.name%></strong></h2>
                  <span><%=user.age%> <%=user.job%></span>
                  <hr>
                  <p><%= user.about %></p>
              </div>
            </div>  
          </div>
      </div>
    </div>
  </div> 
<!========================================
              Edit Modals
========================================-->
  <div class="modal fade" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="modal-edit-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
          </button>
          <h3 class="modal-title" id="modal-edit-label">Edit Profile</h3>
        </div>
        <div class="modal-body" id="edit_profile">   
          <form action="/updateProfile" method="POST" class="edit-form">
            <div class="form-group">
              <input type="text" name="user[name]" placeholder="Name" class="form-first-name form-control" id="form-name" value="<%=user.name%>">
            </div>
            <div class="form-group">
              <input type="text" name="user[job]" placeholder="Occupation" class="form-last-job form-control" id="form-last-job" value="<%=user.job%>">
            </div>
            <div class="form-group">
              <input type="text" name="user[age]" placeholder="Age" class="form-last-age form-control" id="form-last-age" value="<%=user.age%>">
            </div>            
            <div class="form-group">
              <input type="text" name="user[email]" placeholder="Email" class="form-last-name form-control" id="form-last-email" value="<%=user.email%>">
            </div>
            <div class="form-group">
              <input type="text" name="user[userName]" placeholder="Username" class="form-username form-control" id="form-username" value="<%=user.userName%>">
            </div>
            <div class="form-group">
              <input type="text" name="user[facebook]" placeholder="Facebook" class="form-facebook form-control" id="form-facebook" value="<%=user.facebook%>">
            </div>
            <div class="form-group">
              <input type="text" name="user[instagram]" placeholder="Instagram " class="form-instagram form-control" id="form-instagram" value="<%=user.instagram%>">
            </div>
            <div class="form-group">
              <input type="text" name="user[twitter]" placeholder="Twitter Handle" class="form-twitter form-control" id="form-twitter" value="<%=user.twitter%>">
            </div>
            <div class="form-group">
              <input type="password" name="user[password]" placeholder="Enter current or new password" class="form-password form-control" id="form-password" >
            </div>                          
            <div class="form-group">
              <textarea name="user[about]" placeholder="Update bio" class="form-about-yourself form-control" id="form-about-yourself" ></textarea> 
            </div>
              <p class="chosen">Profile Picture</p>
              <input type="file" name="profile_pic" accept="image/*" title="test">
            <button class="btn"s>Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<!========================================
              Flight Tracker
========================================-->  
  <div class="headline">
    <div class="container">    
      <h3 class="flighttracker">FLIGHT TRACKER</h3>
        <form role="form" class="form-horizontal">
          <div class="form-group">
            <input id='airline' type="text" name="airline" placeholder="Airline name or code" class="input-lg form-control2" size="63%">
          </div>
          <div class="form-group">
            <input id='flight_num' type="text" name="flight" placeholder="Flight Number" class="input-lg form-control2" size="63%">
          </div>
          <div class="form-group">
            <input class="searchbtn" id="give_me" type="button" value="Search" size="50">
          </div>
        </form>
    </div>
  </div>
  <div class="container hideshow">
    <hr class="featurette-divider">
      <table class="table table-bordered thead" style="display:none">
        <thead>
          <tr align="center">
            <th width="90px" align="center">Flight</th>
            <th width="130px">Carrier</th>
            <th width="70px">Departure</th>
            <th width="70px">Arrival</th>
          </tr>
        </thead>
        <tbody class="flightstats"></tbody>
      </table>
  </div>
<!========================================
              FLIGHT STATUS MODALS
========================================--> 
  <div id='delayed_modal' class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div id='delayed_status' class="modal-content"></div>
        <form action="/lounge">
          <input type="submit" value="Enter Lounge" class="searchbtn" >
        </form>
    </div>
  </div>
  <div id='other_modal' class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div id='other_status' class="modal-content"></div>
    </div>
  </div>
</body>
  <footer>
    <% include ../partials/footer %>
    <link rel="stylesheet" type="text/css" href="/static/css/main.css">
  </footer>
</body>
</html>
